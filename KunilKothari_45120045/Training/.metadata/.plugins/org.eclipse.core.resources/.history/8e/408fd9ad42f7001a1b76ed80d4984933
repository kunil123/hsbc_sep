package Training;

import java.util.Scanner;

public class Reverse_int {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		Scanner sc= new Scanner(System.in);	
		System.out.println("Enter the number to reverse");
		int n=sc.nextInt();
		int rev=0;
		while(n>0) {
			int d=n%10;
			rev=rev*10+d;
			n=n/10;
		}

	}
	
	
}
